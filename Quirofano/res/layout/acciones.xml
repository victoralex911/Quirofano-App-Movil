<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:background="#BFE6EE"
	android:layout_height="match_parent" 
	android:orientation="vertical">
	
	
	<TextView
		android:id="@+id/titulo"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center"
	    android:layout_marginTop="10dp"
	    android:text="Acciones"
	    android:textSize="20sp" />
	
	<TextView
		android:id="@+id/nombre_paciente"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center"
	    android:layout_marginTop="10dp"
	    android:text="Acciones"
	    android:textSize="15sp" />
	
	<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5" >

     	<Button
       		android:id="@+id/agenda"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Post Operatorio" />

        <Button
           	android:id="@+id/pc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Modificar cirugía" />

        <Button
           	android:id="@+id/cd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Iniciar cirugía" />
            
        <Button
         	android:id="@+id/agenda_del_dia"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Diferir cirugía" />

    	<Button
        	android:id="@+id/salas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Cancelar cirugía" />
    </LinearLayout>
	  
	<LinearLayout
		android:layout_width="wrap_content"
		android:background="#DCDCDC"
		android:id="@+id/info"
		android:layout_height="wrap_content" 
		android:orientation="vertical">
	</LinearLayout>
	    
</LinearLayout>
